---
import Layout from '../layouts/Layout.astro';
const name = "Alex";
---

<Layout>
  <div class="max-w-md mx-auto mt-12 p-6 border-2 border-gray-800 rounded-xl text-center bg-gray-100 hover:bg-gray-200 transition-colors duration-300">
    <h1 class="text-4xl font-bold text-blue-600">
      Hello {name}, now live on Vercel!
    </h1>
    <p class="mt-4 text-gray-600">
      Welcome to my Astro website.
    </p>
  </div>
</Layout>

